{% extends 'paragraph.html.twig' %}

{% block before %}
  {{ attach_library('base/paragraph--image') }}
{% endblock %}

{% block paragraph %}
  {% set classes = classes|merge([
    'is-8-widescreen',
    'is-10-desktop',
    'is-12',
  ]) %}
  <figure{{ attributes.addClass(classes) }}>
      {{ content.field_image_img }}
      {% if content.field_image_caption[0] is defined %}
        <figcaption>
          {{ content.field_image_caption[0] }}
        </figcaption>
      {% endif %}
  </figure>
{% endblock %}
